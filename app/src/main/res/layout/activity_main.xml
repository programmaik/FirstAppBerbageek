<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahmatsaputra.firstappberbageek.MainActivity">
<RelativeLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ayam"/>
        <Button
            android:id="@+id/btnPesan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:text="Pilih"/>
        <Button
            android:id="@+id/btnBatal"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_toRightOf="@+id/btnPesan"
            android:text="Batal"/>

        <TextView
            android:id="@+id/tvmenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image1"
            android:text="Ayam Goreng" />

        <TextView
            android:id="@+id/harga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/tvmenu1"
            android:layout_centerInParent="true"
            android:text="harga1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_below="@+id/menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ikan"/>
        <Button
            android:id="@+id/btnPesan2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image2"
            android:text="Pilih"/>

        <Button
            android:id="@+id/btnBatal2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image2"
            android:layout_toRightOf="@+id/btnPesan2"
            android:text="Batal"/>

        <TextView
            android:id="@+id/tvmenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image2"
            android:text="Ikan Lele Goreng" />

        <TextView
            android:id="@+id/harga2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/tvmenu2"
            android:layout_centerInParent="true"
            android:text="harga1"/>

    </RelativeLayout>

    <Button
        android:id="@+id/pesan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:layout_below="@+id/menu2"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>



</LinearLayout>
